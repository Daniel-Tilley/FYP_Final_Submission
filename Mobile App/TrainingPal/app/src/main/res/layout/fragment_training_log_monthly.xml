<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/fragment_monthly_training_log_picker_wrapper">

        <EditText
            android:id="@+id/test1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:inputType="date"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/color_cursor" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_monthly_training_log_list"
        android:layout_below="@id/fragment_monthly_training_log_picker_wrapper"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:listSelector="@color/colorAccent" />

    <TextView
        android:id="@+id/fragment_monthly_training_log_list_empty_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        />

</RelativeLayout>